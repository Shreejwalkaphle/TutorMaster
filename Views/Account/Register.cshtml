                    <div class="input-box">
                        <label asp-for="email"></label>
                        <input type="text" asp-for="email">
                        <span asp-validation-for="email" class="details"></span>

                    </div>
                    <div class="input-box">
                        <label asp-for="phoneNumber"></label>
                        <input type="text" asp-for="phoneNumber">
                        <span asp-validation-for="phoneNumber" class="details"></span>

                    </div>
                    <div class="input-box">
                        <label asp-for="password"></label>
                        <input type="password" asp-for="password">
                        <span asp-validation-for="password" class="details"></span>

                    </div>
                    <div class="input-box">
                        <label asp-for="confirmpassword"></label>
                        <input type="password" asp-for="confirmpassword">
                        <span asp-validation-for="confirmpassword" class="details"></span>

                    </div>
                    <div class="input-box">
                        <label asp-for="Address"> </label>
                        <input type="text" asp-for="Address">
                        <span asp-validation-for="Address" class="details"></span>

                    </div>
                </div>
                <div class="gender-details">
                    <input type="radio" asp-for="gender" name="gender" id="dot-1" value="male">
                    <input type="radio" asp-for="gender" name="gender" id="dot-2" value="female">
                    <input type="radio" asp-for="gender" name="gender" id="dot-3" value="prefer not to say">
                    <span class="gender-title">Gender</span>
                    <div class="category">
                        <label for="dot-1">
                            <span class="dot one"></span>
                            <span class="gender">Male</span>
                        </label>
                        <label for="dot-2">
                            <span class="dot two"></span>
                            <span class="gender">Female</span>
                        </label>
                        <label for="dot-3">
                            <span class="dot three"></span>
                            <span class="gender">Prefer not to say</span>
                        </label>
                    </div>
                </div>

