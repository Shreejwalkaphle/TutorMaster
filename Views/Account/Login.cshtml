@model LoginViewModel

@{ 
    var returnurl = ViewBag.Returnurl;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/registerstyle.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


</head>
<body>
    <div class="container">
        <div class="title">Login</div>
        <div class="content">
            <form method="post" asp-controller="Account" asp-action="Login">
              @*it is not compulsary that the 'Returnurl' from here and The 'ReturnUrl' in [post] Login action should match  *@
                @Html.Hidden("Returnurl", (object)ViewBag.Returnurl)
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="user-details">
                    <div class="input-box">
                        <input asp-for="Email" />
                        <span asp-validation-for="Email" class="details"> user name</span>
                        <div class="input-box">
                            <input asp-for="Password">
                            <span asp-validation-for="Password" class="details"> Password</span>
                        </div>
                        <div>
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />@Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="button">
                        <input type="submit" name="submit" value="Login">
                    </div>
            </form>
        </div>
    </div>

</body>
</html>